{% sw_extends '@Storefront/storefront/base.html.twig' %}

    {% block base_content %}
        <div class="col-md-12 wk-mp-landingpage wk-mp-landingpage-layout1">
            <div class="wk-mp-banner-container">
                <div class="wk-mp-banner" style="background-image: url({{configData.bannerImage.url}});">  
                    <div class="wk-mp-header">
                        <h1>{{config('WebkulMVMarketplace.config.buttonLabel')}}</h1>
                        {{configData.bannerContent|raw}}
                        <p><a href="{{path('frontend.account.login.page')}}"><button class="button wk-mp-landing-button"><span> <span> <strong>
                        {{config('WebkulMVMarketplace.config.buttonLabel')}}</strong></span></span></button></a></p>
                    </div>
                </div>
            </div>
            <h1 class="wk-marketplace-label">{{config('WebkulMVMarketplace.config.sellerListingTopHeading')}}</h1>
            <div class="wk-mp-landing-sellers-container">
                {% if marketplaceSellers|length == 0 %}
                    <span>{{"wk-mp.public-profile.noSellerMessage"|trans}}</span>
                {% endif %}
                {% for seller in marketplaceSellers %}
                    {% if seller.storeSlug %}
                        {% set customerId = seller.storeSlug %}
                    {% else %}
                        {% set customerId = seller.customerId %}
                    {% endif %}

                    {% set publicProfilePath = path('frontend.marketplace.seller.public.profile', { customerId: customerId }) %}
                    <div class="wk-mp-landing-sellers-wraper ">
                        <div class="wk-mp-landing-sellers">
                            <div class="wk-mp-landing-sellers-logo">
                                <a href=""><img src="{{seller.mediaLogo.url}}" onerror="this.src=`${'{{ environment }}' == 'dev' ? window.location.origin : window.baseUrl}/bundles/webkulmvmarketplace/storefront/seller-profile/default/default.svg`"/></a>
                            </div>
                            <div class="wk-mp-landing-sellers-details">
                                <div><a href="{{publicProfilePath}}" title="View Seller's Shop"><strong>{{seller.storeSlug}}</strong></a></div>
                                <div>{{seller.noOfProducts}} {{"wk-mp.seller-profile.productsLabel"|trans}}</div>
                                <a href="{{publicProfilePath}}"><button class="btn btn-primary" title="View Seller's Collection"><span> <span> {{"wk-mp.seller-profile.viewAllButtonText"|trans}}</span></span></button></a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
                {% if totalSellers > limit %}
                    {% set pageCount = (totalSellers/limit)|round(0,'ceil') %}
                    {% set page = app.request.query.all['p']? app.request.query.all['p']:1 %}
                    <div class="col-md-auto">
                        <nav aria-label="pagination" class="pagination-nav">
                        <ul class="pagination">
                            {% for i in range(1,pageCount) %}
                                <form action="{{path('frontend.marketplace.sellers')}}">
                                <li class="page-item {% if (page == i) %} active {% endif %}">
                                    <input type="submit" name="p" id="p{{i}}" value="{{i}}" class="d-none" title="pagination">
                                    <label class="page-link" for="p{{i}}">{{i}}</label>
                                </li>
                                </form>
                            {% endfor %}
                        </ul>
                        </nav>
                    </div>
                {% endif %}
            </div>
    {% endblock %}
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                               
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                